{
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@git/*": [
        "./git/*"
      ],
      "@validations/*": [
        "./validations/*"
      ]
    }
  }
}
